[user]
  name = Michal Krejčí
  email = mikekreeki@gmail.com

[color]
  ui=auto

[push]
  default=current

[alias]
  s=status
  ss= status -s

  br=branch
  cl=clone
  co=checkout
  track="!f() { branch=$(git rev-parse --abbrev-ref HEAD) && git branch $branch --set-upstream-to origin/$branch;}; f"

  di=diff
  dc=diff --cached

  ci=commit
  amend=commit --amend --reuse-message HEAD

  ff=merge --ff-only
  noff=merge --no-ff

  r = reset
  r1 = reset HEAD^
  rh = reset --hard
  rh1 = reset HEAD^ --hard
  undo=reset --hard

  ls= log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ld= log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

  churn= "!f() { git log --all -M -C --name-only --format='format:' \"$@\" | sort | grep -v '^$' | uniq -c | sort | awk 'BEGIN {print \"count\tfile\"} {print $1 \"\t\" $2}' | sort -g; }; f"

[core]
  excludesfile = /Users/Kreeki/.gitignore
	editor = "mvim -f"

[merge]
  conflictstyle = diff3

[branch]
  autosetuprebase = always

[heroku]
  remote = staging

[help]
  autocorrect = 1

[credential]
  helper = osxkeychain

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
